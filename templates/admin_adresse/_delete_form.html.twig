<form method="post" action="{{ path('app_admin_adresse_delete', {'id': adresse.id}) }}" onsubmit="return confirm('Voulez vous vraiment supprimer cette adresse?');" class="d-inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ adresse.id) }}">
    <button class="btn btn-danger my-2"><i class="align-middle" data-feather="trash"></i></button>
</form>
