{% extends 'base-backend.html.twig' %}
{% block title %}Adresse{% endblock %}

{% block body %}
    <a href="{{ path('app_admin_adresse_index') }}" class="btn btn-dark btn-sm mb-2">Retour à la liste</a>
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Détail de l'adresse</h1>
        {{ include('admin_adresse/_delete_form.html.twig') }}
    </div>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ adresse.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ adresse.nom }}</td>
            </tr>
            <tr>
                <th>Rue</th>
                <td>{{ adresse.rue }}</td>
            </tr>
            <tr>
                <th>Complement</th>
                <td>{{ adresse.complement }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ adresse.ville }}</td>
            </tr>
            <tr>
                <th>CodePostal</th>
                <td>{{ adresse.codePostal }}</td>
            </tr>
            <tr>
                <th>Pays</th>
                <td>{{ adresse.pays }}</td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('app_admin_adresse_edit', {'id': adresse.id}) }}" class="btn btn-success"><i class="align-middle" data-feather="edit-2"></i></a>
{% endblock %}
