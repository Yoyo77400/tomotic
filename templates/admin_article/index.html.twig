{% extends 'base-backend.html.twig' %}
{% block title %}Article index{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Liste des Articles</h1>
        <a href="{{ path('app_admin_article_new') }}" class="btn btn-success">Nouveau</a>
    </div>
    <table class="table table-index table-striped table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th>Quantité</th>
                <th>Prix de vente</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.quantite }}</td>
                <td>{{ article.prixFixe|format_currency('EUR') }}</td>
                <td>
                    <a href="{{ path('app_admin_article_show', {'id': article.id}) }}" class="btn btn-primary"><i class="align-middle" data-feather="eye"></i></a>
                    <a href="{{ path('app_admin_article_edit', {'id': article.id}) }}" class="btn btn-success"><i class="align-middle" data-feather="edit-2"></i></a>
                    {{ include('admin_article/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Pas d'entrée en base de données.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
