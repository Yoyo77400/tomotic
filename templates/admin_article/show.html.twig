{% extends 'base-backend.html.twig' %}
{% block title %}Article{% endblock %}

{% block body %}
    <a href="{{ path('app_admin_article_index') }}" class="btn btn-dark btn-sm mb-2">Retour à la liste</a>
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Détail de l'article</h1>
        {{ include('admin_article/_delete_form.html.twig') }}
    </div>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Quantite</th>
                <td>{{ article.quantite }}</td>
            </tr>
            <tr>
                <th>PrixFixe</th>
                <td>{{ article.prixFixe|format_currency('EUR') }}</td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('app_admin_article_edit', {'id': article.id}) }}" class="btn btn-success"><i class="align-middle" data-feather="edit-2"></i></a>
{% endblock %}
