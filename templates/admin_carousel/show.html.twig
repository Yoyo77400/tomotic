{% extends 'base-backend.html.twig' %}

{% block title %}Carousel{% endblock %}

{% block body %}
    <a href="{{ path('app_admin_carousel_index') }}" class="btn btn-dark btn-sm mb-2">Retour à la liste</a>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Détail du Carousel</h1>
        {{ include('admin_carousel/_delete_form.html.twig') }}
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ carousel.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ carousel.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ carousel.description }}</td>
            </tr>
            <tr>
                <th>Tag</th>
                <td>{{ carousel.tag }}</td>
            </tr>
            <tr>
                <th>RankNumber</th>
                <td>{{ carousel.rankNumber }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ carousel.updatedAt ? carousel.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ carousel.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ carousel.imageName }}</td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('app_admin_carousel_edit', {'id': carousel.id}) }}" class="btn btn-success"><i class="align-middle" data-feather="edit-2"></i></a>
{% endblock %}
