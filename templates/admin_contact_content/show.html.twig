{% extends 'base-backend.html.twig' %}

{% block title %}ContactContent{% endblock %}

{% block body %}
    <a href="{{ path('app_admin_contact_content_index') }}" class="btn btn-dark btn-sm mb-3">Retour à la liste</a>
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Détail des informations de contact</h1>
        {{ include('admin_contact_content/_delete_form.html.twig') }}
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contact_content.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ contact_content.titre }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ contact_content.adresse }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ contact_content.email }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ contact_content.telephone }}</td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('app_admin_contact_content_edit', {'id': contact_content.id}) }}" class="btn btn-success"><i class="align-middle" data-feather="edit-2"></i></a>
{% endblock %}
