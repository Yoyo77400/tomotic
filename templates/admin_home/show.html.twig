{% extends 'base-backend.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    <a href="{{ path('app_admin_home_index') }}" class="btn btn-dark btn-sm mb-2">Retour Ã  la liste</a>
    <div class="d-flex justify-content-between align-items-center my-3">
        <h1>Home</h1>
        {{ include('admin_home/_delete_form.html.twig') }}
    </div>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ home.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ home.titre }}</td>
            </tr>
            <tr>
                <th>Texte</th>
                <td>{{ home.texte }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ home.updatedAt ? home.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Logo</th>
                <td><img src="{{ asset('images/home/' ~ home.imageName)}}" alt=""></td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ home.isActive ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('app_admin_home_edit', {'id': home.id}) }}" class="btn btn-success"><i class="align-middle" data-feather="edit-2"></i></a>
{% endblock %}
