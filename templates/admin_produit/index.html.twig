{% extends 'base-backend.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center my-3">
        <h1>Produit index</h1>
        <a href="{{ path('app_admin_produit_new') }}" class="btn btn-success">Nouveau</a>
    </div>
    
    <table class="table table-index table-striped table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>Nom</th>
                <th>Prix</th>
                <th>Réduction</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>
                    <a href="{{ asset('images/images/' ~ produit.images[0].imageName) }}" data-lightbox="{{ produit.images[0].imageName }}">
                        <img src="{{ asset('images/images/' ~ produit.images[0].imageName) }}" alt="" class="img-list">
                    </a>
                </td>
                <td>{{ produit.nom }}</td>
                <td>{{ produit.prix }}</td>
                <td>{{ produit.discount }}</td>
                <td>
                    <a href="{{ path('app_admin_produit_show', {'id': produit.id}) }}" class="btn btn-primary"><i class="align-middle" data-feather="eye"></i></a>
                    <a href="{{ path('app_admin_produit_edit', {'id': produit.id}) }}" class="btn btn-success"><i class="align-middle" data-feather="edit-2"></i></a>
                    {{ include('admin_produit/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6" class="text-start">Pas d'entrée trouvée en base de données!</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
