{% extends 'base-backend.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <a href="{{ path('app_admin_produit_index') }}" class="btn btn-dark btn-sm mb-3">Retour à la liste</a>
    <div class="d-flex justify-content-between align-items-center my-3">
        <h1>Détails du produit</h1>
        {{ include('admin_produit/_delete_form.html.twig') }}
    </div>

    <table class="table table-index">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
            <tr>
                <th>Discount</th>
                <td>{{ produit.discount }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ produit.isActive }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ produit.slug }}</td>
            </tr>
            <tr>
                <th>Images</th>
                <td>
                    <div class="d-flex flex-wrap">
                        {% for image in produit.images %}
                            <a href="{{ asset('images/images/' ~ image.imageName) }}" data-lightbox="{{ image.imageName }}">
                                <img src="{{ asset('images/images/' ~ image.imageName) }}" alt="" class="img-list">
                            </a>
                        {% endfor %}
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('app_admin_produit_edit', {'id': produit.id}) }}" class="btn btn-success"><i class="align-middle" data-feather="edit-2"></i></a>
{% endblock %}
