{% extends 'base-backend.html.twig' %}

{% block title %}Liste des services{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Liste des services</h1>
        <a href="{{ path('app_admin_service_new') }}" class="btn btn-success">Nouveau</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Tag</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for service in services %}
            <tr>
                <td>{{ service.id }}</td>
                <td>{{ service.titre }}</td>
                <td>{{ service.description }}</td>
                <td>{{ service.tag }}</td>
                <td>
                    <a href="{{ path('app_admin_service_show', {'id': service.id}) }}" class="btn btn-primary"><i class="align-middle" data-feather="eye"></i></a>
                    <a href="{{ path('app_admin_service_edit', {'id': service.id}) }}" class="btn btn-success"><i class="align-middle" data-feather="edit-2"></i></a>
                    {{ include('admin_service/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Pas de résultat en base de données.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
