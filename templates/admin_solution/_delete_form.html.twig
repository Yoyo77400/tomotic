<form method="post" action="{{ path('app_admin_solution_delete', {'id': solution.id}) }}" onsubmit="return confirm('Voulez vous vraiment supprimer cette solution?');" class="d-inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ solution.id) }}">
    <button class="btn btn-danger my-2"><i class="align-middle" data-feather="trash"></i></button>
</form>
