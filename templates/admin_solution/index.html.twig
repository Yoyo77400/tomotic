{% extends 'base-backend.html.twig' %}
{% block title %}Solution index{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Liste des Solutions</h1>
        <a href="{{ path('app_admin_solution_new') }}" class="btn btn-success">Nouveau</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Tag</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for solution in solutions %}
            <tr>
                <td>{{ solution.id }}</td>
                <td>{{ solution.titre }}</td>
                <td>{{ solution.description }}</td>
                <td>{{ solution.tag }}</td>
                <td>
                    <a href="{{ path('app_admin_solution_show', {'id': solution.id}) }}" class="btn btn-primary"><i class="align-middle" data-feather="eye"></i></a>
                    <a href="{{ path('app_admin_solution_edit', {'id': solution.id}) }}" class="btn btn-success"><i class="align-middle" data-feather="edit-2"></i></a>
                    {{ include('admin_solution/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Pas d'entrée en base de données.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
