{% extends 'base-backend.html.twig' %}
{% block title %}Solution{% endblock %}

{% block body %}
    <a href="{{ path('app_admin_solution_index') }}" class="btn btn-dark btn-sm mb-2">Retour à la liste</a>
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Détail de la solution</h1>
        {{ include('admin_solution/_delete_form.html.twig') }}
    </div>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ solution.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ solution.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ solution.description }}</td>
            </tr>
            <tr>
                <th>Tag</th>
                <td>{{ solution.tag }}</td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('app_admin_solution_edit', {'id': solution.id}) }}" class="btn btn-success"><i class="align-middle" data-feather="edit-2"></i></a>

    
{% endblock %}
