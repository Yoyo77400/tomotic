{% extends 'base-backend.html.twig' %}

{% block title %}SousCategorie{% endblock %}

{% block body %}
    <a href="{{ path('app_admin_sous_categorie_index') }}" class="btn btn-dark btn-sm mb-3">Retour à la liste</a>
    <div class="d-flex justify-content-between align-items-center my-3">
        <h1>Détails de la Sous-Catégorie</h1>
        {{ include('admin_sous_categorie/_delete_form.html.twig') }}
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sous_categorie.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ sous_categorie.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ sous_categorie.description }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ sous_categorie.imageName }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ sous_categorie.updatedAt ? sous_categorie.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ sous_categorie.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ sous_categorie.slug }}</td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('app_admin_sous_categorie_edit', {'id': sous_categorie.id}) }}" class="btn btn-success"><i class="align-middle" data-feather="edit-2"></i></a>
{% endblock %}
