<div class="col-12 d-md-none">
	<div id="carouselProduitControls" class="carousel slide" data-bs-ride="carousel">
		<div class="carousel-inner">
			{% for imageProduit in produit.images %}
				<div class="carousel-item {% if loop.index0 == 0 %}active{% endif %} text-center">
					<img src="{{ asset('images/images/' ~ imageProduit.imageName) }}" class="img-fluid w-75" alt="">
				</div>
			{% endfor %}
		</div>
		<button class="carousel-control-prev" type="button" data-bs-target="#carouselProduitControls" data-bs-slide="prev">
			{# <span class="carousel-control-prev-icon" aria-hidden="true"></span> #}
            <i class="fa-solid fa-circle-chevron-left fa-2xl" style="color: #000000;"></i>
			<span class="visually-hidden">Previous</span>
		</button>
		<button class="carousel-control-next" type="button" data-bs-target="#carouselProduitControls" data-bs-slide="next">
			{# <span class="carousel-control-next-icon text-dark" aria-hidden="true"></span> #}
            <i class="fa-solid fa-circle-chevron-right fa-2xl" style="color: #000000;" aria-hidden="true"></i>
			<span class="visually-hidden">Next</span>
		</button>
	</div>
</div>
