{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
	<form method="post" class="w-25 mx-auto">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-auto">
				Vous êtes connecté en tant que: 
				{{ app.user.userIdentifier }},
				<a href="{{ path('app_logout') }}">Déconnexion</a>
			</div>
		{% endif %}

		<h1 class="h3 mb-3 font-weight-normal">Connectez vous</h1>
        <div class='d-flex align-items-center'>
		    <label for="inputEmail" class='me-3'>Email</label>
		    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
        </div>
        <div class='d-flex align-items-center mt-3'>
		    <label for="inputPassword" class='me-2'>Mot de passe</label>
		    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
        </div>
		<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
		<div class='d-flex flex-column mt-2'>
			<a href="{{ path('app_forgot_password_request') }}" class='text-unstyled'>Mot de passe oublié</a>
			<button class="btn btn-green-tomotic mt-2" type="submit">
				Connexion
			</button>
		</div>
	</form>
{% endblock %}
